<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chat Conversation</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #dfe9f3, #ffffff);
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px;
    }

    .chat-container {
      width: 95%;
      max-width: 750px;
      background: #fff;
      border-radius: 20px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .chat-header {
      background: #0d6efd;
      color: #fff;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 1.4em;
      font-weight: 600;
      letter-spacing: 0.3px;
    }

    .new-chat button {
      background-color: #fff;
      color: #0d6efd;
      border: none;
      border-radius: 20px;
      padding: 8px 16px;
      font-size: 0.9em;
      font-weight: 500;
      transition: 0.3s;
    }

    .new-chat button:hover {
      background-color: #e3efff;
      transform: scale(1.05);
    }

    .chat-body {
      padding: 20px;
      background: #f8faff;
      overflow-y: auto;
      flex-grow: 1;
    }

    .message {
      margin-bottom: 18px;
      display: flex;
      flex-direction: column;
      animation: fadeIn 0.4s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .msg-box {
      padding: 12px 16px;
      border-radius: 16px;
      max-width: 75%;
      line-height: 1.5;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

    .from-me {
      align-items: flex-end;
    }

    .from-me .msg-box {
      background: #0d6efd;
      color: white;
      border-bottom-right-radius: 4px;
    }

    .from-them {
      align-items: flex-start;
    }

    .from-them .msg-box {
      background: #e9ecef;
      color: #212529;
      border-bottom-left-radius: 4px;
    }

    .time {
      font-size: 0.8em;
      color: #888;
      margin-top: 5px;
    }

    .btn-container {
      display: flex;
      gap: 8px;
      margin-top: 6px;
    }

    .edit, .delete {
      padding: 3px 10px;
      font-size: 0.75rem;
      border: none;
      border-radius: 6px;
      color: #fff;
      cursor: pointer;
      transition: 0.3s;
    }

    .edit {
      background-color: #198754;
    }

    .edit:hover {
      background-color: #157347;
    }

    .delete {
      background-color: #dc3545;
    }

    .delete:hover {
      background-color: #bb2d3b;
    }

  </style>
</head>
<body>
  <div class="chat-container">
    <div class="chat-header">
      üí¨ Chat Messages
      <div class="new-chat">
        <form action="/chats/new" method="get">
          <button>‚ûï New Chat</button>
        </form>
      </div>
    </div>

    <div class="chat-body">
      <% if (conversation.length > 0) { %>
        <% for (const chat of conversation) { %>
          <div class="message <%= chat.from === 'huzaifa' ? 'from-me' : 'from-them' %>">
            <div class="msg-box">
              <strong><%= chat.from %> ‚Üí <%= chat.to %>:</strong> <%= chat.msg %>
              <div class="btn-container">
                <form method="get" action="/chats/<%= chat._id %>/edit">
                  <button class="edit">‚úèÔ∏è Edit</button>
                </form>
                <form method="post" action="/chats/<%= chat._id %>?_method=DELETE">
                  <button class="delete">üóëÔ∏è Delete</button>
                </form>
              </div>
            </div>
            <div class="time"><%= new Date(chat.createdAt).toLocaleString() %></div>
          </div>
        <% } %>
      <% } else { %>
        <p class="text-center text-muted mt-5">No chats found üòî</p>
      <% } %>
    </div>
  </div>
</body>
</html>
