// ========================================================
// âš™ï¸ QUERY OPERATORS â€” Conditions in MongoDB
// ========================================================
//
// $eq   â†’ Equal to
// $ne   â†’ Not equal to
// $gt   â†’ Greater than
// $gte  â†’ Greater than or equal
// $lt   â†’ Less than
// $lte  â†’ Less than or equal
// $in   â†’ Value in given array
// $nin  â†’ Not in given array
// $and  â†’ Combine multiple conditions (AND)
// $or   â†’ Combine multiple conditions (OR)
// $not  â†’ Negates a condition
// $exists â†’ Checks if field exists
// $regex â†’ Pattern matching (like starts with)
//
// ðŸ§© Examples:
/*
User.find({ age: { $gt: 25 } });                     // age > 25
User.find({ age: { $in: [21, 25, 30] } });           // age = 21 or 25 or 30
User.find({ $and: [{ age: { $lt: 25 } }, { name: "Ali" }] }); // both true
User.find({ email: { $exists: false } });            // find missing emails
User.find({ name: { $regex: /^H/, $options: 'i' } }); // name starts with H
*/

// ========================================================
// âš™ï¸ UPDATE OPERATORS â€” Modify fields smartly
// ========================================================
//
// $set     â†’ Set or change field value
// $inc     â†’ Increment numeric value
// $mul     â†’ Multiply numeric value
// $rename  â†’ Rename a field
// $unset   â†’ Remove a field
// $min     â†’ Update only if new value is smaller
// $max     â†’ Update only if new value is larger
//
// ðŸ§© Examples:
/*
User.updateOne({ name: "Ali" }, { $inc: { age: 1 } });   // age +1
User.updateOne({ name: "Ali" }, { $set: { email: "ali@gmail.com" } });
User.updateOne({ name: "Ali" }, { $unset: { age: "" } }); // remove age field
User.updateOne({ name: "Ali" }, { $rename: { name: "fullName" } });
*/

// ========================================================
// ðŸ“‹ FINAL TEST â€” Display all users
// ========================================================
